<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:contentPadding="5dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/card_id"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/tv_nome"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:text="Agostinho dos santos machava"
                       android:textAppearance="@style/TextAppearance.AppCompat.Title"
                       android:textSize="15sp"/>
               </LinearLayout>

                <TextView
                    android:id="@+id/tv_proficao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programador"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_work"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                    android:textSize="13sp"/>


                <TextView
                    android:id="@+id/tv_descricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="if it was in progress, it just sets the cancelled ï¬‚ag which can be checked by checking the "
                    android:textSize="12sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_localizacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maputo"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:textSize="12sp"/>

                </RelativeLayout>


            </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>